{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "ES6"],
    "module": "es6",
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true
  },
  "include": ["main.ts"],
  "exclude": ["node_modules", "dist"]
}
